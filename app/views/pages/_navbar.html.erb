<div class="container">
  <header class="d-flex flex-wrap align-items-center justify-content-center justify-content-md-between
   py-3 mb-4 border-bottom">
        <%= link_to 'The Reading List', root_path, class: "fs-2 d-flex align-items-center col-md-3 mb-2 mb-md-0 text-dark text-decoration-none"%>

    <ul class="nav col-12 col-md-auto mb-2 justify-content-center mb-md-0">
      <li class="nav-item px-2">
        <%= link_to 'Home', root_path, class:"nav-link"%>
      </li>
      <li class="nav-item px-2">
        <%= link_to 'Books', books_path, class:"nav-link"%>
      </li>



      <li><a href="#" class="nav-link px-2 link-dark">Features</a></li>
    </ul>

    <div class="col-md-3 text-end mx-5">


      <% if user_signed_in? %>
        <button type="button" class="btn btn-outline-primary me-2">
          <%= link_to 'Sign Out', destroy_user_session_path, method: :delete, class:"nav-link"%>
        </button>
        <button type="button" class="btn btn-outline-primary me-2">
          <%= link_to 'Edit Profile', edit_user_registration_path, class:"nav-link"%>
        </button>
      <% else %>

        <button type="button" class="btn btn-primary">
          <%= link_to 'Sign Up', new_user_registration_path, class:"nav-link"%>
        </button>
        <button type="button" class="btn btn-outline-primary me-2">
          <%= link_to 'Log In', new_user_session_path, class:"nav-link"%>
       </button>
      <% end %>
    </div>
  </header>
</div>
